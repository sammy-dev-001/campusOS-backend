{
  "name": "campusos-backend",
  "version": "1.0.0",
  "description": "Backend API for CampusOS - A comprehensive campus management system",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.new.js",
    "dev": "nodemon --watch . --ext js --exec node --experimental-specifier-resolution=node server.new.js",
    "prod": "NODE_ENV=production node server.new.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t campusos-backend .",
    "docker:run": "docker run -p 5000:5000 campusos-backend",
    "docker:compose": "docker-compose up --build",
    "seed": "node ./seeds/seed.js",
    "seed:dev": "NODE_ENV=development npm run seed",
    "seed:prod": "NODE_ENV=production npm run seed",
    "db:migrate": "node --experimental-specifier-resolution=node ./scripts/runMigrations.js",
    "db:reset": "node ./migrations/reset.js",
    "db:run-migrations": "node --experimental-specifier-resolution=node ./scripts/runMigrations.js",
    "docs:generate": "apidoc -i ./routes -o ./docs",
    "docs:serve": "serve -s docs",
    "prepare": "husky install"
  },
  "keywords": [
    "campus",
    "education",
    "management",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@expo/webpack-config": "^19.0.1",
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/socket.io": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cloudinary": "^1.41.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.9",
    "redis": "^4.6.13",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/campusos-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/campusos-backend/issues"
  },
  "homepage": "https://github.com/yourusername/campusos-backend#readme"
}
